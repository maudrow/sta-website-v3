{
  "name": "sta-website-v2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "debug": "DEBUG=true next dev",
    "build": "run-s build:next build:rss build:sitemap && next export",
    "build:next": "next build",
    "build:rss": "npm run script -- scripts/generate-rss.ts",
    "build:sitemap": "next-sitemap",
    "script": "ts-node --project tsconfig.scripts.json",
    "start": "next start",
    "prettier": "prettier --ignore-path .gitignore \"**/*.(js|jsx|json|yml|yaml|css|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "next lint",
    "validate": "run-s check-format lint build"
  },
  "dependencies": {
    "@sta-podcast/post-loader": "^1.4.1",
    "bulma": "^0.9.4",
    "classnames": "^2.3.1",
    "dayjs": "^1.11.4",
    "next": "12.2.3",
    "node-fetch": "^3.2.9",
    "podcast": "^2.0.0",
    "proper-url-join": "^2.1.1",
    "react": "18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-youtube": "^9.0.3",
    "sharp": "^0.30.7",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@sta-podcast/types": "^1.0.7",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "18.6.1",
    "@types/proper-url-join": "^2.1.1",
    "@types/react": "18.0.15",
    "@types/react-copy-to-clipboard": "^5.0.3",
    "endent": "^2.1.0",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.3",
    "next-sitemap": "^2.5.28",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  }
}
